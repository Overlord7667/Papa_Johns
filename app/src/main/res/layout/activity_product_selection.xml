<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductSelection"
    android:background="@color/backaction">

    <ImageView
        android:id="@+id/pizzasID"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/nameProduct"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pizzasID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="NAME"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nameProduct"
        android:textAlignment="center"
        android:text="Большие мягкие булочки нравятся детям. "
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:id="@+id/productSize"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_below="@+id/ingredients"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/back" />

    <TextView
        android:id="@+id/valueProduct"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:text="0"
        android:textSize="28sp"
        android:background="@color/white"
        android:textAlignment="center"
        android:elegantTextHeight="true"
        android:layout_below="@+id/productSize"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/plusButton"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_below="@+id/productSize"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/valueProduct"
        android:autoSizeTextType="uniform"
        android:background="@color/back"
        android:text="+"
        android:textDirection="firstStrong"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/minusButton"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_below="@+id/productSize"
        android:layout_marginTop="15dp"
        android:layout_marginRight="-5dp"
        android:layout_toStartOf="@+id/valueProduct"
        android:autoSizeTextType="uniform"
        android:background="@color/back"
        android:text="-"
        android:textDirection="firstStrong"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_below="@+id/valueProduct"
        android:layout_marginRight="-50dp"
        android:layout_toStartOf="@id/valueProduct"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="円"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_below="@+id/valueProduct"
        android:layout_marginLeft="-30dp"
        android:layout_toEndOf="@id/valueProduct"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/productPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/back"
        android:text="ADD"
        android:textColor="#000000" />

</RelativeLayout>